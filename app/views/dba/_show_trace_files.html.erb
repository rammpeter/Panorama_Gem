<% @update_area = get_unique_area_id %>

<%= render_page_caption("Show trace files (selects data only for your login instance = #{@instance})") %>


<%= ajax_form(:controller => :dba, :action => :list_trace_files, :update_area => @update_area) do %>
  <div class="flex-row-container">
    <%= include_start_end_timepicker('default', "Caution: For client and database in different timezones:\nThis value is sometimes interpreted as local client time, not database time like shown in result column 'Time'") %>
    <!--
    Nicht sinnvoll so lange Daten nur von aktueller Instance gezogen werden
    <%= instance_tag %>
    -->

0 ,   <div class="flex-row-element" title="Show only records with matching hits at message text.
    Delimit several OR-combined inclusion expressions by '|'.">
      Incl. Filter
      <%= text_field_tag(:incl_filter, "", :size=>30) %>
    </div>

    <div class="flex-row-element" title="Show only records without matching hits at message text.
    Delimit several OR-combined exclusion expressions by '|'.">
      Excl. Filter
      <%= text_field_tag(:excl_filter, "", :size=>30) %>
    </div>


    <%= submit_tag("Show trace files", :title => 'Show server-side trace files in period for this database instance') %>

  </div>
<% end %>

<div id="<%= @update_area %>" style="clear:both;">
</div>
